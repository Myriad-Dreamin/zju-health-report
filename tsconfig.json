{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "sourceMap": true,
      "declaration": true,
      "incremental": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "target": "es6"
    },
    "files": [
      "src/main.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }